<Application x:Class="FileClassification.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/ThemeCommons.MaterialDesign;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="TitleBar" Color="{DynamicResource DarkColor}" Opacity=".9" />
            <SolidColorBrush x:Key="MaterialDesignBody" Color="{DynamicResource DarkColor}" />
            <SolidColorBrush x:Key="Background" Color="{DynamicResource LightColor}" Opacity=".7" />
        </ResourceDictionary>
    </Application.Resources>
</Application>